{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",

    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "afterDeclarations": true,
        "transform": "typescript-transform-paths"
      }
    ]
  },

  "exclude": [
    "src/**/*.spec.ts"
  ],
}
