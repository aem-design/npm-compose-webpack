{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,

    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],

    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },

  "exclude": [
    "configs",
    "dist",
    "node_modules"
  ],

  "include": [
    "src/**/*"
  ]
}
