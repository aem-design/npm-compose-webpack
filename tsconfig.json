{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },

  "includes": [
    "src/**/*.ts"
  ],
  
  "exclude": ["node_modules", "**/*.test.ts"]
}