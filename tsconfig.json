{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,

    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],

    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
  },

  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ],

  "include": [
    "src"
  ]
}
