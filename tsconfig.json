{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,

    "lib": [
      "dom",
      "dom.iterable",
      "ES2018"
    ],

    "paths": {
      "@/test/*": [
        "test/*"
      ],

      "@/types/*": [
        "src/types/*"
      ],

      "@/*": [
        "src/*"
      ]
    },

    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018"
  },

  "exclude": [
    "configs",
    "dist",
    "node_modules"
  ],

  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
