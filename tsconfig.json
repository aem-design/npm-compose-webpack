{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],

    "module": "commonjs",
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "./lib",
    
    "rootDir": "./src",
    "strict": true,
    "target": "es6",

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },

  "exclude": [
    "lib",
    "node_modules",
    "**/*.test.ts"
  ],

  "includes": [
    "**/*.ts"
  ]
}