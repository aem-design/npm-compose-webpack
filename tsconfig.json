{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,

    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],

    "paths": {
      "@/*": [
        "src/*"
      ],

      "@/types/*": [
        "src/types/*"
      ]
    },

    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },

  "exclude": [
    "configs",
    "dist",
    "node_modules"
  ],

  "include": [
    "src/**/*"
  ]
}
